<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.trafficdetails.TrafficDetailsFragment">


    <TextView
        android:id="@+id/map_here"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="50sp"
        android:textAlignment="center"
        android:text="MAP HERE WITH LOCATION" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="20dp"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/traffic_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            />

        <TextView
            android:id="@+id/traffic_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="3"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/traffic_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="3"
            android:textSize="32sp" />

    </LinearLayout>



</LinearLayout>